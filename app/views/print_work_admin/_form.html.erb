<%= form_for @print_work, :url => print_work_admin_path(@print_work), :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= select(:print_work, :state, [['Listo', 'ready'], ['Cancelado', 'cancelled']]) %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                print_works_path, :class => 'btn' %>
  </div>
<% end %>