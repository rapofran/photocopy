<%- model_class = PrintWork -%>
<div class="page-header">
  <h1><%=t '.title', :default => t("helpers.models.print_work.index") %></h1>
</div>
<% unless @print_works.empty? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t("models.print_work.file") %></th>
        <th><%= t("models.print_work.description") %></th>
        <th><%= t("models.print_work.state") %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @print_works.each do |print_work| %>
        <tr>
          <td><%= link_to print_work.file.name, print_work.file.to_s %></td>
          <td><%= print_work.description %></td>
          <td><%= raw print_work.state.text %></td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_print_work_path(print_work), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        print_work_path(print_work),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-success">No tenés ningun trabajo aún..</div>
<% end %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_print_work_path,
            :class => 'btn btn-primary' %>
