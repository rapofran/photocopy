<%= form_for @print_work, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @print_work.errors.any? %>
    <div class="alert alert-error">
      <h2><%= pluralize(@print_work.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @print_work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="control-group">
    <%= f.label :file, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :file %>
      <% unless @print_work.file.to_s.empty? %>
        <td><%= link_to @print_work.file.name, @print_work.file.to_s %></td>
      <% end %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                print_works_path, :class => 'btn' %>
  </div>
<% end %>
